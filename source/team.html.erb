<div id="team">
  <div class="about-content">
    <h1>This template was built with <i class="fas fa-heart"></i> by</h1>
    <ul class="list-inline">
      <% data.builders.each do |builder| %>
        <li>
          <% link_to "https://kitt.lewagon.com/alumni/#{builder.github_nickname}", target: "_blank" do %>
            <%= image_tag "https://kitt.lewagon.com/placeholder/builders/#{builder.github_nickname}", class: "img-circle" %>
          <% end %>
          <h2><%= builder.name %></h2>
          <p>
            <% link_to "https://github.com/#{builder.github_nickname}", target: "_blank" do %>
              <i class="fab fa-github"></i> <%= builder.github_nickname %>
            <% end %>
          </p>
        </li>
      <% end %>
    </ul>
  </div>
</div>
